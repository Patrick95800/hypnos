{% extends 'backend/base.html.twig' %}

{% block title %}Suite {{ suite.title }}{% endblock %}

{% block body %}
    <h1>Suite {{ suite.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ suite.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ suite.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ suite.priceInEuros }} €</td>
            </tr>
            <tr>
                <th>Lien booking.com</th>
                <td>{{ suite.bookingLink }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backend_suite_index') }}">Retour à la liste</a>

    <a href="{{ path('backend_suite_edit', {'id': suite.id}) }}">Editer</a>

    {{ include('backend/suite/_delete_form.html.twig') }}
{% endblock %}
