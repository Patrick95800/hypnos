{% extends 'base.html.twig' %}

{% block title %}Hôtel {{ hotel.name }}{% endblock %}

{% block body %}
    <h1>
        <a href="{{ path('hotel', {'slug': hotel.slug}) }}">{{ hotel.name }}</a>
    </h1>
    <p>Description: {{ hotel.description }}</p>
    <p>Adresse complete: {{ hotel.address }}</p>
    <p>Ville: {{ hotel.city }}</p>

    {% for suite in hotel.suites %}
        <h2>{{ suite.title }}</h2>
        <p>{{ suite.description }}</p>
        <p>{{ suite.priceInEuros }} €</p>
        <p><a href="{{ suite.bookingLink }}" target="_blank">Voir sur Booking.com</a></p>
    {% endfor %}
{% endblock %}
